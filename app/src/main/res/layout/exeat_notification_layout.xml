<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/profile_color">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="40dp"
                android:id="@+id/exeact_notification_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/download"
                />


        </RelativeLayout>





    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/btn_ts"
        android:layout_margin="@dimen/btn_ts"
        app:cardCornerRadius="@dimen/btn_ts">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/notify_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="There is no notification at the moment"
                android:textSize="@dimen/btn_ts"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:layout_marginLeft="3dp"/>

            <Button
                android:id="@+id/notify_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@color/button_colors"
                android:text="CONTINUE"
                android:textColor="@color/white_text"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>